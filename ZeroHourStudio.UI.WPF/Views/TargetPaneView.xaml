<UserControl x:Class="ZeroHourStudio.UI.WPF.Views.TargetPaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ZeroHourStudio.UI.WPF.Converters"
             Background="Transparent" AllowDrop="True"
             DragEnter="OnDragEnter" DragLeave="OnDragLeave" Drop="OnDrop">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:HexColorToBrushConverter x:Key="HexColorToBrushConverter"/>
    </UserControl.Resources>

    <Border x:Name="MainBorder" CornerRadius="12" BorderBrush="#1A2332" BorderThickness="1"
            Background="#0D1117">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Border Width="4" Height="20" CornerRadius="2" Background="#FF6B00"/>
                <TextBlock Text="Ø§Ù„Ù…ÙˆØ¯ Ø§Ù„Ù‡Ø¯Ù" FontSize="14" FontWeight="SemiBold"
                           Foreground="#E8EDF3" Margin="8,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="TARGET" FontSize="10" Foreground="#556677"
                           Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Path Browser -->
            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding ModPath, UpdateSourceTrigger=PropertyChanged}"
                         Background="#161B22" Foreground="#C9D1D9" BorderBrush="#21262D"
                         Padding="8,6" FontSize="11" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="..." Margin="4,0,0,0" Padding="10,6"
                        Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D"
                        Click="BrowseTarget_Click" Cursor="Hand"/>
            </Grid>

            <!-- Load Button -->
            <Button Grid.Row="2" Content="âš¡ ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ù‡Ø¯Ù" Command="{Binding LoadModCommand}"
                    Background="#FF6B00" Foreground="#FFFFFF" FontWeight="Bold"
                    Padding="0,8" Margin="0,0,0,8" FontSize="12" Cursor="Hand" BorderThickness="0"/>

            <!-- Target Slots Info -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,6"
                        Visibility="{Binding HasPath, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="ðŸ“Š" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding TargetModSlotsInfo}" Foreground="#00CC66" FontSize="10" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Faction Selector -->
            <Grid Grid.Row="4" Margin="0,0,0,8">
                <ComboBox ItemsSource="{Binding TargetFactionOptions}"
                          SelectedValue="{Binding SelectedFaction}"
                          SelectedValuePath="Name"
                          Background="#161B22" Foreground="#C9D1D9"
                          BorderBrush="#21262D" Padding="8,6" FontSize="11">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Margin="0,0,10,0"/>
                                <TextBlock Foreground="{Binding AvailabilityColor, Converter={StaticResource HexColorToBrushConverter}}" FontSize="9">
                                    <Run Text="("/>
                                    <Run Text="{Binding AvailableSlotsText, Mode=OneWay}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="IsEnabled" Value="{Binding HasAvailableSlots}"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </Grid>

            <!-- Transfer Log -->
            <Border Grid.Row="5" CornerRadius="8" Background="#161B22" Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Ø³Ø¬Ù„ Ø§Ù„Ù†Ù‚Ù„" FontSize="11"
                               Foreground="#556677" Margin="0,0,0,6"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding TransferLog}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="4,3"/>
                                <Setter Property="IsHitTestVisible" Value="False"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âœ“" Foreground="#00FF88" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding UnitName}" Foreground="#C9D1D9" FontSize="11"/>
                                    <TextBlock Text="{Binding TimeText}" Foreground="#556677" FontSize="10" Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty State -->
                    <TextBlock Grid.Row="1" Text="Ø§Ø³Ø­Ø¨ ÙˆØ­Ø¯Ø© Ù…Ù† Ø§Ù„Ù…ØµØ¯Ø± ÙˆØ£ÙÙ„ØªÙ‡Ø§ Ù‡Ù†Ø§"
                               Foreground="#334455" FontSize="12"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding TransferLog.Count, Converter={StaticResource BoolToVis}, ConverterParameter=inverse}"/>
                </Grid>
            </Border>

            <!-- Status -->
            <TextBlock Grid.Row="6" Text="{Binding StatusText}"
                       Foreground="#556677" FontSize="10" Margin="0,6,0,0"/>
        </Grid>
    </Border>
</UserControl>
